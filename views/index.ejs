<body onload="initMSocial()">
<!--navgationbar in partial file-->
<% include ./partials/navigationbar.ejs %>

<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h5"><%if(locals.user){
                        %>@<%=user.username%><%
                        }else{
                        %><p>@Fake User</p><%
                        }%></div>
                    <div class="h7 text-muted">Full Name : Fake</div>
                    <div class="h7">Test
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="h6 text-muted">Followers</div>
                        <div class="h5">Number</div>
                    </li>
                    <li class="list-group-item">
                        <div class="h6 text-muted">Following</div>
                        <div class="h5">Number</div>
                    </li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6 gedf-main">

            <!--- \\\\\\\Post-->
            <div class="card gedf-card">
                <div class="card-header">
                    <h6>Make a publication</h6>
                </div>
                <div class="card-body">
                    <form id="pform" enctype="multipart/form-data" onsubmit="submitForm('pform')">
                        <div class="form-group">
                            <label class="sr-only" for="message">post</label>
                            <textarea class="form-control" id="message" rows="3" placeholder="What are you thinking?" name="content"></textarea>
                        </div>

                        <div class="collapse" id="postIm"></div>

                        <div hidden="hidden">
                            <input name="author"  value="<%if(locals.user){
                            %><%=user.username%><%
                            }else{
                            %><p>Fake User</p><%
                            }%>">
                        </div>

                        <div class="btn">
                            <label class="btn-link" for="customFile"><i class="fa fa-picture-o"></i></label>
                            <input type="file" hidden class="custom-file-input" id="customFile" name="contentImage" multiple onchange="readURL(this)">
                        </div>
                        <div class="btn-group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                <i class="fa fa-globe"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                                <a class="dropdown-item" href="#"><i class="fa fa-globe"></i> Public</a>
                                <a class="dropdown-item" href="#"><i class="fa fa-users"></i> Friends</a>
                                <a class="dropdown-item" href="#"><i class="fa fa-user"></i> Just me</a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" form="pform">share</button>
                    </form>
                </div>
            </div>

            <div id="posts"></div>

        </div>

        <div class="col-md-3">
            <div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-lat='53.3816197' data-lng='-1.4820851' data-whatever="@getbootstrap">+ Create Event</button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">New event</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="eform" onsubmit="submitForm('eform')">
                                    <div class="form-group">
                                        <label for="title" class="col-form-label">Event title:</label>
                                        <input type="text" class="form-control" id="name" name="title" maxlength="64" placeholder="Name to identify the events">
                                    </div>
                                    <div class="form-group">
                                        <label for="address" class="col-form-label">Event address</label>
                                        <input type="text" class="form-control" id="location" name="address" placeholder="A place or a valid address">
                                    </div>
                                    <div class="col-md-12 modal_body_map">
                                        <div class="location-map" id="location-map">
                                            <div style="width: 600px; height: 400px;" id="map_canvas"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="description" class="col-form-label">Description</label>
                                        <textarea class="form-control" rows="3" placeholder="More about the event?" name="description"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="date" class="col-form-label">Date</label>
                                        <input type="datetime-local" name="date">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button class="btn btn-primary" form="eform">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="events">
            </div>

        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBFkFzLAzdX9dRinyyWNeoePm65HjHqp94&libraries=places&callback=initMap"
        async defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="script.js"></script>
<script src="/scripts/map.js"></script>
</body>
</html>