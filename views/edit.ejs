<body id="signin-page">
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <div id="message"></div>
                <form onsubmit="edituser()">
                    <div>
                        <label for="name">First Name</label>
                        <input type="text" id="name" placeholder="<%=user.preference.firstname%>" name="first_name">
                    </div>
                    <div>
                        <label for="name2">Family Name:</label>
                        <input type="text" id="name2" placeholder="<%=user.preference.familyname%>" name="family_name">
                    </div>
                    <div>
                        <label for="username">Uuer Name:</label>
                        <input id="username" placeholder="<%=user.username%>" name="user_name">
                    </div>

                    <div>
                        <label for="jobtitle">Job Title:</label>
                        <input id="jobtitle" placeholder="<%=user.preference.jobtitle%>" name="job_title">
                    </div>

                    <div>
                        <label for="contactnumber">Contact Number:</label>
                        <input type="number" id="contactnumber" placeholder="<%=user.preference.firstname%>" name="contact_number">
                    </div>
                    <button type="submit" value="Submit">Edit</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</body>